 <h1>Rakuserach</h1>
<div class='content'>
  <div id="search-box">
    <%= form_tag('/rakuten', method: :get) do %>
        <%= text_field_tag :good, "",  id: "good_search", name: "keyword", placeholder: "キーワードを打ち込んでください", style: "width: 200px;"%><button title="検索" type="submit">検索</button>
    <% end %>
  </div>
  <h2>検索結果</h2>
  <div id='good_list'>
     <%= render 'good_list',goods: @items %>
  </div>
</div>