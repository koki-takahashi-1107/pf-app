

<h3>投稿一覧</h3>
<div class="card-list-container py-5">
  <% post_images.each do |post_image| %>
  <div class="card w-30 mt-4 shadow-lg">
    <div class="image">
      <%= link_to post_image_path(post_image.id) do %>
       <%= attachment_image_tag post_image, :image, class:"card-img-top"; %>
      <% end %>
    </div>
    <div class="container pt-2 pb-2">
      <div class="row">
        <div class="col-5">
          <%= attachment_image_tag post_image.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: '80x80', class:"rounded-circle"; %>
        </div>
        <div class="col-7">
          <p class="card-title">
            <%= link_to(post_image_path(post_image.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= post_image.title %></span></strong>
               <p><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %></p>
            <% end %>
          </p>
          <p class="card-text text-dark">説明：<%= post_image.description %></p>
          <span><i class="fas fa-user"></i> By <%= post_image.user.name %> ｜ </span>

        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate post_images %>
</div>