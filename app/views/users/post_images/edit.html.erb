<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Post</h1>
  		<% if @post_image.errors.any? %>
      <div id="error_explanation">
        <h3><%= @post_image.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
          <% @post_image.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <%= form_with model:@post_image,local:true do |f| %>
      <%= f.attachment_field :image, class: "w-100" %>
        <div class="form-group text-white">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control post_image_title' %>
        </div>
        <div class="form-group text-white">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control post_image_descripions' %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
    	<%= render 'layouts/errors', obj: @post_image %>
  		<%= link_to '投稿詳細', post_image_path(@post_image), class: "post_image_#{@post_image.id}" %>
  		<%= link_to '戻る', post_images_path, class: "back" %>
  </div>
</div>